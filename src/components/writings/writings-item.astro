---
import { type CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"writings">;
}

const { post } = Astro.props;
const { title, pubDate, slug } = post.data;
---

<li class="flex items-baseline gap-6 py-1">
  <time
    class="w-[10ch] flex-shrink-0 text-sm text-ink/60 dark:text-paper/60 whitespace-nowrap"
  >
    {pubDate.toISOString().slice(0, 10)}
  </time>
  <a
    href={`/writings/${slug}`}
    class="text-inherit font-serif text-base leading-tight no-underline hover:underline"
  >
    {title}
  </a>
</li>
